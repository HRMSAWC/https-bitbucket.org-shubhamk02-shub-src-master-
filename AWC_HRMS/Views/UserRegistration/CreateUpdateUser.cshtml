@model AWC_HRMS.Models.UserMasterVM
@{
    ViewData["Title"] = "CreateUpdateUser";
}



<form method="post">
    <input type="hidden" asp-for="UserMaster.UserId" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.UserMaster == null || Model.UserMaster.UserId == 0) ? "Member Registration" : "Update Member")  </h2>
            <br />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3">
            <label asp-for="UserMaster.UserName"></label>
            <input asp-for="UserMaster.UserName" class="form-control" />
            <span asp-validation-for="UserMaster.UserName" class="text-danger"></span>
        </div>

       
         <div class="row  mb-3">
            <label asp-for="UserMaster.Password"></label>
            <input asp-for="UserMaster.Password" type="password"  maxlength= "16" class="form-control" />
            <span asp-validation-for="UserMaster.Password" class="text-danger"></span>
            </div>

            <div class="row  mb-3">
                <label asp-for="UserMaster.ConfirmPassword"></label>
                <input asp-for="UserMaster.ConfirmPassword" type="password" maxlength="16" class="form-control" />
                <span asp-validation-for="UserMaster.ConfirmPassword" class="text-danger"></span>
                </div>

            <div class="row mb-3">
                <label asp-for="UserMaster.Email"></label>
                <input asp-for="UserMaster.Email" class="form-control" />
                <span asp-validation-for="UserMaster.Email" class="text-danger"></span>
            </div>

        <div class="row mb-3">
            <label asp-for="UserMaster.ContactNo"></label>
            <input asp-for="UserMaster.ContactNo" class="form-control" />
            <span asp-validation-for="UserMaster.ContactNo" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                   
                    Interest

                </label>
                <div class="col-md-10">
                    <label class="form-check-inline">
                        @if(Model.UserMaster==null)
                        {
                            @Html.CheckBox("Admin", false)
                        }
                        else if (Model.UserMaster.IsInterestedInAdmin==true)
                        {
                            @Html.CheckBox("Admin", true)
                        }
                        else
                        {
                            @Html.CheckBox("Admin", false)
                        }
                        Admin

                    </label>
                    <label class="form-check-inline">
                        @if (Model.UserMaster == null)
                        {
                            @Html.CheckBox("SuperAdmin", false)
                        }
                        else if (Model.UserMaster.IsInterestedInSuperAdmin == true)
                        {
                            @Html.CheckBox("SuperAdmin", true)
                        }
                        else
                        {
                            @Html.CheckBox("SuperAdmin", false)
                        }
                        SuperAdmin

                    </label>
                    <label class="form-check-inline">
                        @if (Model.UserMaster==null)
                        {
                            @Html.CheckBox("HR", false)
                        }

                        else if (Model.UserMaster.IsInterestedInHR == true)
                        {
                            @Html.CheckBox("HR", true)
                        }
                        else
                        {
                            @Html.CheckBox("HR", false)
                        }
                        HR

                    </label>

                </div>


            </div>
        
        @if (Model.UserMaster == null || Model.UserMaster.UserId == 0)
        {
            <button class="btn btn-primary" type="submit">Add</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }

    </div>
    <a asp-action="Index">Back To List</a>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }



